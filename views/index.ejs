<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Link Shortener Demo</h1>
    <br />
    <form action="/short-url" method="POST">
      <label for="url">Url: </label>
      <input type="text" id="url" name="url" placeholder="Nháº­p url ..." />
      <br />
      <label for="url">Domain: </label><br />
      <input type="radio" id="s1" name="shortlink" value="full_short_link" />
      <label for="s1">shrtco.de</label><br />
      <input type="radio" id="s2" name="shortlink" value="full_short_link2" />
      <label for="s2">9qr.de</label><br />
      <input type="radio" id="s3" name="shortlink" value="full_short_link3" />
      <label for="s3">shiny.link</label><br />
      <button type="submit">Short url</button>
    </form>

    <table style="width: 500px">
      <thead>
        <tr>
          <th align="left">Full url</th>
          <th align="left">Short url</th>
        </tr>
      </thead>
      <tbody>
        <% list.forEach( e => {%>
        <tr>
          <td><%= e.url %></td>
          <td><a href="<%= e.shortlink %>"><%= e.shortlink %></a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
